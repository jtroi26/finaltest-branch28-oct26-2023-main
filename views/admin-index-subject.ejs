<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="/stylesheets/style1.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" rel="stylesheet">

</head>

<body id="body-pd">
    <header class="header" id="header">
        <div class="header_toggle"> <i class='bx bx-menu' id="header-toggle"></i> </div>
        <div class="header_notify"> <i class='bx bx-bell' id="header-notify"></i> </div>
    </header>

    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div>
                <a href="/admin/dashboard" class="nav_logo"> <i class='bx bx-book-reader nav_logo-icon'></i> <span
                        class="nav_logo-name">E-learn</span> </a>
                <div class="nav_list">
                    <a href="/admin/dashboard" class="nav_link "> <i class='bx bx-grid-alt nav_icon'></i> <span
                            class="nav_name">Dashboard</span> </a>
                    <a href="/admin/index-subject" class="nav_link active"> <i class='bx bx-book nav_icon'></i> <span
                            class="nav_name">Subject</span></a>
                    <a href="/admin/index-section" class="nav_link "> <i class='bx bx-calendar nav_icon'></i> <span
                            class="nav_name">Section</span></a>
                    <a href="/admin/index-teacher" class="nav_link"> <i class='bx bx-medal nav_icon'></i> <span
                            class="nav_name">Teacher</span></a>
                </div>
            </div>

            <% if (admin_id) { %>

                <form action="/logout" method="post">

                    <a class="nav_link" type="submit"> <button><i class='bx bx-log-out nav_icon'></i> <span
                                class="nav_name">SignOut</span></button> </a>
                </form>

                <% } else { %>
                    <a href="/admin/login" class="nav_link"> <i class='bx bx-log-out nav_icon'></i> <span
                            class="nav_name">Login</span> </a>
                    <% } %>


        </nav>
    </div>

    <div class="row my-4 align-items-center">
        <div class="col-md-6">
            <h1>All Subject</h1>
        </div>
        <div class="col-md-6 text-end">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createSubjectModal">
                Create Subject
            </button>
        </div>
    </div>
    <div class="modal fade" id="createSubjectModal" tabindex="-1" aria-labelledby="createSubjectModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createSubjectModalLabel">Create Subject</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/admin/create-subject" method="post">
                        <div class="mb-3">
                            <label for="subjectid" class="form-label">Subject ID:</label>
                            <input type="text" class="form-control" id="subjectid" name="subjectid" required
                                placeholder="SubjectID must be unique">
                        </div>
                        <div class="mb-3">
                            <label for="" class="form-label">Subject Name</label>
                            <input type="text" class="form-control" name="subjectname" id="subjectname" required
                                placeholder="Science for example">
                        </div>
                        <div class="mb-3">
                            <label for="" class="form-label">Section:</label>
                            <select name="sectionname" id="sectionname" class="form-select" required>
                                <option value="" disabled selected>Choose an option</option>
                                <% data.forEach((section)=> { %>
                                    <option value="<%= section.sectionname %>">
                                        <%= section.sectionname %>
                                    </option>
                                    <% }); %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="" class="form-label">Teacher:</label>
                            <select name="teacherid" id="teacherid" class="form-select" required>
                                <option value="" disabled selected>Choose an option</option>
                                <% teachers.forEach((teacher)=> { %>
                                    <option value="<%= teacher.teacherid %>">
                                        <%= teacher.firstname + ' ' + teacher.middlename + ' ' + teacher.lastname %>
                                    </option>
                                    <% }); %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="visibility">Visibility</label>
                            <select name="visibility" id="visibility" class="form-select" required>
                                <option value="" disabled selected>Choose an option</option>
                                <option value="Visible">Visible</option>
                                <option value="Invisible">Invisible</option>
                            </select>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Create Subject</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Subject ID</th>
                <th>Subject Name</th>
                <th>Section Name</th>
                <th>Teacher ID</th>
                <th>Assigned Teacher</th>
                <th>Subject Visibility</th>
                <th colspan="3" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach((row)=> { %>
                <tr>
                    <td>
                        <%= row.subjectid %>
                    </td>
                    <td>
                        <%= row.subjectname %>
                    </td>
                    <td>
                        <%= row.sectionname %>
                    </td>
                    <td>
                        <%= row.teacherid %>
                    </td>
                    <td>
                        <%= row.teacher_fullname %>
                    </td>
                    <td>
                        <%= row.visibility %>
                    </td>
                    <td class="text-center">
                        <button class="btn btn-info" data-bs-toggle="modal"
                            data-bs-target="#viewModal<%= row.subjectid %>">View</button>
                    </td>
                    <td class="text-center">
                        <button class="btn btn-warning" data-bs-toggle="modal"
                            data-bs-target="#editModal<%= row.subjectid %>">Edit</button>
                    </td>
                    <td class="text-center">
                        <form action="/admin/delete-subject/<%= row.subjectid %>" method="post">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
                <!-- View Modal -->
                <div class="modal fade" id="viewModal<%= row.subjectid %>" tabindex="-1"
                    aria-labelledby="viewModalLabel<%= row.subjectid %>" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="viewModalLabel<%= row.subjectid %>">View Subject Details
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <p><strong>Subject ID:</strong>
                                    <%= row.subjectid %>
                                </p>
                                <p><strong>Subject Name:</strong>
                                    <%= row.subjectname %>
                                </p>
                                <p><strong>Section Name:</strong>
                                    <%= row.sectionname %>
                                </p>
                                <p><strong>Teacher ID:</strong>
                                    <%= row.teacherid %>
                                </p>
                                <p><strong>Assigned Teacher:</strong>
                                    <%= row.teacher_fullname %>
                                </p>
                                <p><strong>Visibility:</strong>
                                    <%= row.visibility %>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Edit Modal -->
                <div class="modal fade" id="editModal<%= row.subjectid %>" tabindex="-1"
                    aria-labelledby="editModalLabel<%= row.subjectid %>" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="editModalLabel<%= row.subjectid %>">Edit Subject Details
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form action="/admin/edit-subject/<%= row.subjectid %>" method="post">
                                    <div class="mb-3">
                                        <label for="subjectid<%= row.subjectid %>" class="form-label">Subject ID</label>
                                        <input type="text" class="form-control" name="subjectname" id="subjectid<%= row.subjectid %>"
                                            value="<%= row.subjectid %>" required placeholder="Science for example">
                                    </div>
                                    <div class="mb-3">
                                        <label for="subjectName<%= row.subjectid %>" class="form-label">Subject Name</label>
                                        <input type="text" class="form-control" name="subjectname" id="subjectName<%= row.subjectid %>"
                                            value="<%= row.subjectname %>" required placeholder="Science for example">
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label for="sectionName<%= row.subjectid %>" class="form-label">Section</label>
                                        <select name="sectionname" id="sectionName<%= row.subjectid %>" class="form-select" required>x
                                            <% data.forEach((section) => { %>
                                                <option value="<%= section.sectionname %>" 
                                                    <%= section.sectionname === row.sectionname ? 'selected' : '' %>>
                                                    <%= section.sectionname %>
                                                </option>
                                            <% }); %>
                                        </select>
                                    </div>

                                    <div class="mb-3">
                                        <label for="teacherId<%= row.subjectid %>" class="form-label">Teacher</label>
                                        <select name="teacherid" id="teacherId<%= row.subjectid %>" class="form-select">
                                            <% teachers.forEach((teacher) => { %>
                                                <option value="<%= teacher.teacherid %>"
                                                    <%= teacher.teacherid === row.teacherid ? 'selected' : '' %>>
                                                    <%= teacher.firstname + ' ' + teacher.middlename + ' ' + teacher.lastname %>
                                                </option>
                                            <% }); %>
                                        </select>
                                    </div>

                                    <div class="mb-3">
                                        <label for="visibility<%= row.subjectid %>" class="form-label">Visibility</label>
                                        <select name="visibility" id="visibility<%= row.subjectid %>" class="form-select">
                                            <option value="Visible" <%= row.visibility === 'Visible' ? 'selected' : '' %>>Visible</option>
                                            <option value="Invisible" <%= row.visibility === 'Invisible' ? 'selected' : '' %>>Invisible</option>
                                        </select>
                                    </div>

                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-warning">Update</button>
                                      </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <% }); %>

        </tbody>

    </table>

</body>

<script src="/javascripts/dashboard.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script>

</html>