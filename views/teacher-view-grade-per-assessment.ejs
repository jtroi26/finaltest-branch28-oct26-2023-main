<!-- Period 1 Table -->
<h2>Period 1</h2>
<table border="1">
    <tr>
        <th>id</th>
        <th>assessmentTitle</th>
        <th>Quarter Period</th>
        <th>Date</th>
        <th>Student Full Name</th>
        <th>Sectionname</th>
        <th>subjectname</th>
        <th>Achieved Grade</th>
        <th>Assessment Overall Grade</th>
        <th>Edit Grade</th>
    </tr>
    <% period1.forEach(result => { %>
        <tr>
            <td><%= result.id %></td>
            <td><%= result.assessmentTitle %></td>
            <td><%= result.quarterperiod %></td>
            <td><%= result.dateGiven %></td>
            <td><%= result.full_name %></td>
            <td><%= result.sectionname %></td>
            <td><%= result.subjectname %></td>
            <td><%= result.grade %></td>
            <td><%= result.total %></td>
            <td><a href="/teacher/grades/update/<%= result.id %>">Edit Grade</a></td>
        </tr>
    <% }); %>
</table>

