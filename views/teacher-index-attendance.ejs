      <h1 style="text-align: center;">All Attendance of : <%= sectionname %> - <%= subjectname %> </h1>
      <hr>

<h3><a href="/teacher/create/attendance">Create Attendance</a></h3>

<form action="/teacher/students/attendance/" method="post">
      <label for="">Select Date to view Attendance</label>
      <input type="date" id="dateInput" name="dateInput"><br><br>


    
        <select name="quarterperiod" id="" style="border-radius: 5px; background-color: #4A55A2; border-color: #4A55A2;" type="button" class="btn btn-primary dropdown-toggle" data-mdb-toggle="dropdown" aria-expanded="false" >
            <option value="" default disabled>Choose an Option</option>
            <option value="First Quarter">First Quarter</option>
            <option value="Second Quarter">Second Quarter</option>
            <option value="Third Quarter">Third Quarter</option>
            <option value="Fourth Quarter">Fourth Quarter</option>
        </select>
        

      <button type="submit" class="btn btn-primary btn-rounded" style="background-color: #4A55A2; border-color: #4A55A2;">Generate Attendance</button>

    

</form>

<br>


<table border="1">
      <tr>
          <th scope="col">Student ID</th>
          <th scope="col">Student Name</th>
          <th scope="col">Section</th>
          <th scope="col">Subject</th>
          <th scope="col">Attendance</th>
          <th scope="col">Quarter</th>
          <th scope="col">Date</th>
          <th scope="col">Action</th>
      </tr>
      <% attendance.forEach(entry => { %>
      <tr>
          <td><%= entry.studentID %></td>
          <td><%= entry.full_name %></td>
          <td><%= entry.sectionname %></td>
          <td><%= entry.subjectname %></td>
          <td><%= entry.attendance %></td>
          <td><%= entry.quarterperiod %></td>
          <td><%= entry.date %></td>
          <td><a class="btn btn-primary btn-rounded" style="background-color: #7895CB; border-color: #7895CB;" href="/teacher/students/attendance/edit/<%= entry.id %>">Edit Attendance</a></td>

      </tr>
      <% }); %>
  </table>

  <% } %>


<script>
      // Get the current date in ISO format (YYYY-MM-DD)
      const currentDate = new Date().toISOString().split('T')[0];
    
      // Set the current date as the default value for the input tag
      document.getElementById('dateInput').value = currentDate;
    </script>


