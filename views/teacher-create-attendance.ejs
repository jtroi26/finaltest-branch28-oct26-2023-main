                    </nav>
                </div>
            </aside>
            <div class="page-wrapper">
                <div class="page-breadcrumb">
                    <div class="row">
                        <div class="col-12 d-flex no-block align-items-center">
                            <h4 class="page-title">Create Attendance for <%= sectionname %> - <%= subjectname %>
                            </h4>
                            <div class="ms-auto text-end">
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item"><a href="/teacher/dashboard">Home</a></li>
                                        <li class="breadcrumb-item active" aria-current="page">Student</li>
                                    </ol>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container-fluid">
                    <div class="row ">
                        <div class="card">
                            <div class="card-body">
                                <form action="/teacher/create/attendance" method="post">
                                    <h4>Date Today: <span id="currentDate"></span></h4>
                                
                                    <label for="quarterperiod">Attendance for Quarter:</label>
                                    <select name="quarterperiod" id="quarterperiod" class="form-control" style="width: 20%;">
                                        <option value="" default selected disabled>Choose an option</option>
                                        <% quarters.forEach(quarter => { %>
                                            <option value="<%= quarter.quarterperiod %>"><%= quarter.quarterperiod %></option>
                                        <% }); %>
                                    </select><br><br>
                                
                                    <div class="right-align">
                                        <button class="btn btn-primary btn-rounded" type="submit">Create Attendance Today</button>
                                    </div>
                                
                                    <!-- Button to mark all students as Present -->
                                    <i onclick="markAllPresent()" class="btn btn-success">Mark All Present</i>
                                
                                    <div class="table-responsive">
                                        <table id="zero_config" class="table table-striped table-bordered">
                                            <thead>
                                                <tr>
                                                    <th hidden></th>
                                                    <th>Student ID</th>
                                                    <th>Student Name</th>
                                                    <th>Attendance</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% students.forEach(student => { %>
                                                    <tr>
                                                        <td hidden>
                                                            <input type="text" aria-hidden="true" name="studentID" class="studentID"
                                                                value="<%= student.studentID %>">
                                                        </td>
                                                        <td>
                                                            <%= student.studentID %>
                                                        </td>
                                                        <td>
                                                            <%= student.full_name %>
                                                        </td>
                                                        <td>
                                                            <input type="text" aria-hidden="true" name="attendance" id="attendanceInput_<%= student.studentID %>"
                                                                class="attendance" value="Present" hidden>
                                                            <cd onclick="changeAttendance(this, '<%= student.studentID %>')">Change Value</cd>
                                                        </td>
                                                    </tr>
                                                <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                </form>
                                
                                <script>
                                    function changeAttendance(button, studentID) {
                                        const inputField = document.getElementById(`attendanceInput_${studentID}`);
                                        const values = ['Present', 'Late', 'Absent', 'Excuse'];
                                        const iconClasses = [
                                            'fa-solid fa-check',
                                            'fa-solid fa-hourglass-start',
                                            'fa-solid fa-circle-xmark',
                                            'fa-brands fa-wordpress'
                                        ];
                                        const currentValue = inputField.value;
                                
                                        if (!currentValue) {
                                            inputField.value = values[0];
                                        } else {
                                            const currentIndex = values.indexOf(currentValue);
                                            const nextIndex = (currentIndex + 1) % values.length;
                                            inputField.value = values[nextIndex];
                                        }
                                
                                        // Update the icon classes based on the current value
                                        const iconClass = iconClasses[values.indexOf(inputField.value)];
                                        button.innerHTML = `<i class="${iconClass}"></i>`;
                                    }
                                
                                    // Function to mark all students as "Present"
                                    function markAllPresent() {
                                        const attendanceInputs = document.querySelectorAll('.attendance');
                                        attendanceInputs.forEach(input => {
                                            input.value = 'Present';
                                        });
                                
                                        // Update the buttons to display the "Present" icon
                                        const buttons = document.querySelectorAll('cd');
                                        buttons.forEach(button => {
                                            button.innerHTML = '<i class="fa-solid fa-check"></i>';
                                        });
                                    }
                                </script>
                                
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
