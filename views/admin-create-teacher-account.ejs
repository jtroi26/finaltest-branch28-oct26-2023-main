<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Teacher</title>
</head>
<body>
    <h1>teacher Details</h1>
    <form action="/admin/create-teacher-account" method="post">
        <label for="">Teacher ID</label><br>
        <input type="text" name="teacherid" id="teacherid"><br>

        <label for="">First Name</label><br>
        <input type="text" name="firstname" id="firstname" oninput="generateUserLogin()"><br>

        <label for="">Middle Name</label><br>
        <input type="text" name="middlename" id="middlename"oninput="generateUserLogin()"><br>

        <label for="">Last Name</label><br>
        <input type="text" name="lastname" id="lastname"oninput="generateUserLogin()"><br>

        <label for="">Suffix</label><br>
    <select name="suffix" id="suffix">
        <option value="" default disabled selected>Choose an option</option>
        <option value="Sr.">Senior</option>
        <option value="Jr.">Junior</option>
        <option value="III">III</option>
        <option value="IV">IV</option>
        <option value="V">V</option>
        <option value="VI">VI</option>
        <option value="null">none</option>
    </select><br>

    <label for="department">Department</label><br>
    <select name="department" id="department">
        <% for (let departmentObject of departments) { %>
            <option value="<%= departmentObject.department %>">
                <%= departmentObject.department %>
            </option>
            <% } %>
    </select><br>

    <label for="">Visibility</label><br>
    <select name="visibility" id="visibility">
        <option value="" default selected disabled>Choose an Option</option>
        <option value="Visible">Visible</option>
        <option value="Invisible">Invisible</option>
    </select><br>

    <button type="submit">Create Account</button>

    </form>






</body>

</html>